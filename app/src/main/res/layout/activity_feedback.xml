<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Feedback"
    android:background="@drawable/crop">
    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:background="@drawable/payment"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"></ImageView>


    <TextView
        android:id="@+id/t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="         Thank You :) \n Payment Successful!"
        android:textSize="30dp"
        android:textColor="#E43C0D"
        android:layout_centerInParent="true"
        android:textStyle="bold"
        />
    <Button
        android:id="@+id/bt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70dp"
        android:layout_centerInParent="true"
        android:text="exit"
        android:background="@drawable/bsty"
        android:textStyle="bold"
        />



</RelativeLayout>